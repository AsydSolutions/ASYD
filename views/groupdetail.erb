<div class="well">
  <legend>Group Members for <%=@group%></legend>
  <% @members.each do |host| %>
      <h5><div class="btn-group">
      <a style="margin-bottom: 10px" class="btn btn-success srv server" href="/server/<%=host%>"><%=host%></a>
      <a style="margin-bottom: 10px" href="#delMember" class="btn btn-success dropdown-toggle" onclick="passDataToModal('<%=host%>', '#delMember')"><span class="icon-remove icon-white"></span></a>
        </div></h5>
  <% end %>

    <input type="hidden" name="count" value="1" />
      <div class="control-group" id="fields">
        <label class="control-label" for="field1">Custom variables:</label>
        <div class="controls" id="profs">
          <%@opt_vars.each do |var|%>
            <form class="input-append" id="add_group_var" action='/groups/del-var' method='post'>
              <div id="field"><input type="hidden" name="group" value="<%=@group%>"><input type="hidden" name="var_name" value="<%=var[0]%>"><span class="span2 uneditable-input focused"><%=var[0]%></span><span class="uneditable-input focused"><%=var[1]%></span><button class="btn" type="submit"><i class="icon-minus"></i></button></div>
            </form>
          <%end%>
          <form class="input-append" id="add_group_var" action='/groups/add-var' method='post'>
            <div id="field"><input type="hidden" name="group" value="<%=@group%>"><input autocomplete="off" class="input span2" id="var_name" name="var_name" type="text" placeholder="variable name"/><input autocomplete="off" class="input" id="value" name="value" type="text" placeholder="value"/><button class="btn" type="submit"><i class="icon-plus"></i></button></div>
          </form>
        </div>
      </div>

  <legend></legend>
  <a id="add" class="btn btn-primary offset9">Add server to group</a>
</div>

<form id="add_form" style="display:none" action='/groups/edit' method='post' class="form-inline well">
  <input name='action' type="hidden" value="add_member">
  <input name='params[group]' type="hidden" value="<%=@group%>">
  <div class="control-group"><input name='params[server]' type="text" class="input-xlarge" data-provide="typeahead" data-items="5" data-source='<%=get_server_list%>' autocomplete="off" autofocus></div>
  <div class="control-group"><input class="btn primary" type='submit' value='Add'></div>
</form>

<div id="delMember" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Attention!</h3>
  </div>
  <div class="modal-body">
    <p>Are you sure you want to delete <b id="dataInput"></b> from the <b><%=@group%></b> hostgroup?</p>
  </div>
  <div class="modal-footer">
    <form id="form" id="delGroup" action="/groups/edit" method="post">
      <input type="hidden" name="action" value="del_member">
      <input type="hidden" name="params[group]" value="<%=@group%>">
      <input type="hidden" name="params[server]" id="dataInput" value="">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <button type="submit" class="btn btn-primary">Delete</button>
    </form>
  </div>
</div>
