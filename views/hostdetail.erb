<h3><%=@data[:hostname]%></h3>
<div class="row">
  <div class="span6">
  <table class="table table-striped table-bordered table-hover">
  <tbody>
    <tr>
      <td><strong><%="os:"%></strong></td>
      <td><%=@data[:dist_name]+" "+@data[:dist_ver]%></td>
    </tr>
    <tr>
      <td><strong><%="arch:"%></strong></td>
      <td><%=@data[:arch]%></td>
    </tr>
    <tr>
      <td><strong><%="ip:"%></strong></td>
      <td><%=@data[:ip]%></td>
    </tr>
  </tbody>
  </table>
  </div>
  <div class="span6">
  <table class="table table-striped table-bordered table-hover">
  <tbody>
    <tr>
      <td><strong><%="load:"%></strong></td>
      <td><%=@status[:load_1].to_s+" "+@status[:load_5].to_s+" "+@status[:load_15].to_s unless @status.nil? %></td>
    </tr>
    <tr>
      <td><strong><%="cpu:"%></strong></td>
      <td><%=@status[:cpu_us].to_s+"%us, "+@status[:cpu_sy].to_s+"%sy, "+@status[:cpu_wa].to_s+"%wa" unless @status.nil? %></td>
    </tr>
    <tr>
      <td><strong><%="mem:"%></strong></td>
      <td><%=@status[:used_sysmem_mb].to_s+"MB used / "+@status[:total_memory].to_s+"MB total" unless @status.nil? %><div style="margin-top: 9px; margin-bottom: 9px; text-align: center" class="progress progress-success">
                <div style="width: <%=@status[:used_sysmem_percent].to_i.round.to_s unless @status.nil? %>%" class="bar"><%=@status[:used_sysmem_percent].to_s unless @status.nil? %>% used</div>
      </div></td>
    </tr>
  </tbody>
  </table>
  </div>
</div>
