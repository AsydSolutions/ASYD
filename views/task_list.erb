<div class="row">
  <div class="span12">
    <div class="widget widget-table action-table">
      <div class="widget-header">
        <i class="icon-stethoscope"></i><h3>Active Tasks</h3>
      </div>
      <div class="widget-content">
        <table class="table table-striped table-bordered">
        <tbody>
          <% @tasks_progress.each do |task| %>
            <tr>
              <td><a href="/task/<%=task.id%>">#<%=task.id%></a></td>
              <td><%=task.action.to_s%> on <%=task.target_type%>: <%=task.target%></td>
              <td><%=task.status.to_s%></td>
              <td><%=task.created_at.to_s%></td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
