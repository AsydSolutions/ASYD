# Variables:
#
# <%ADYD%> - IP of the ASYD server
# <%HOSTNAME%> - Hostname of the target server
# <%IP%> - IP of the target server
# <%MONITOR:service%> - Service to monitor by default

set daemon 120
set logfile syslog facility log_daemon
set idfile /var/.monit.id
set statefile /var/.monit.state

set httpd port 2812 and
    use address <%IP%>
    allow <%ASYD%>
    allow 127.0.0.1
    allow asyd:<%MONIT_PW%>  # <%MONIT_PW%> = Autogenerated password for monit, please don't touch!!!

check system <%HOSTNAME%>
    if loadavg (1min) > 4 then alert
    if loadavg (5min) > 3 then alert
    if memory usage > 75% then alert
    if cpu usage (user) > 70% then alert
    if cpu usage (system) > 30% then alert
    if cpu usage (wait) > 20% then alert

include /etc/monit/conf.d/*

<%MONITOR:sshd%>
